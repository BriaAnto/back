<%- layout('layouts/main.ejs') %> 

<div class="row">

    <div class="col-md-4 offset-md-4">

        <div class="card mt-5 text-center">
            <div class="card-header">
                <h3>INICIAR SESIÓN</h3>
            </div>
            <div class="card-body">
        
                <form action="/iniciar_sesion" method="POST">
                    <div class="form-group">
                        <input type="text" name="usuario" placeholder="Inserta usuario" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Inserta contraseña" class="form-control">
                    </div>
                    
                    
                    <button type="submit" class="btn btn-primary btn-block mt-4">Iniciar sesión</button>
                </form>
        
            </div>
        </div>
    
    </div>

</div>